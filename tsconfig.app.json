{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vite/client"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "@editorjs/editorjs": ["./src/types/editorjs.d.ts"],
      "@editorjs/header": ["./src/types/editorjs.d.ts"],
      "@editorjs/list": ["./src/types/editorjs.d.ts"],
      "@editorjs/image": ["./src/types/editorjs.d.ts"],
      "@editorjs/code": ["./src/types/editorjs.d.ts"],
      "@editorjs/quote": ["./src/types/editorjs.d.ts"],
      "@editorjs/delimiter": ["./src/types/editorjs.d.ts"],
      "@editorjs/inline-code": ["./src/types/editorjs.d.ts"],
      "@editorjs/marker": ["./src/types/editorjs.d.ts"]
    },
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"]
}
